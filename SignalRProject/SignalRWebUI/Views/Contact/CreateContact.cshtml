
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model CreateContactDto


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Anasayfa | İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Yazısı Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="location">Konum</label>
                                <input type="text" class="form-control" id="location" asp-for="Location">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="phone">Telefon</label>
                                <input type="text" class="form-control" id="phone" asp-for="Phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Email Giriniz</label>
                                <input type="email" class="form-control" id="email" asp-for="Mail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Açıklama Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Yazısı Ekle</button>

                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
