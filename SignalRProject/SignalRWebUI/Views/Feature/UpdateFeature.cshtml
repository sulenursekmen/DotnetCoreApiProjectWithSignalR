@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkanlar İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Öne Çıkanları Güncelle</div>
                        </div>
                        <input type="hidden" asp-for="FeatureID"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title1">Başlık 1 Giriniz</label>
                                <input type="text" class="form-control" id="Title1" asp-for="Title1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title2">Başlık 2 Giriniz</label>
                                <input type="text" class="form-control" id="Title2" asp-for="Title2">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title3">Başlık 3 Giriniz</label>
                                <input type="text" class="form-control" id="Title3" asp-for="Title3">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description1">Açıklama 1 Giriniz</label>
                                <input type="text" class="form-control" id="Description1" asp-for="Description1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description2">Açıklama 2 Giriniz</label>
                                <input type="text" class="form-control" id="Description2" asp-for="Description2">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description3">Açıklama 3 Giriniz</label>
                                <input type="text" class="form-control" id="Description3" asp-for="Description3">
                            </div>
                        </div>

                        <div class="card-action">
                            <button class="btn btn-primary">Öne Çıkanları Güncelle</button>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>



