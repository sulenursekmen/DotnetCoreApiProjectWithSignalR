
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@model UpdateProductDto


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelle</div>
                        </div>
                        <input type="hidden" asp-for="ProductID"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Ürün Adını Giriniz</label>
                                <input type="text" class="form-control" id="productname" asp-for="Name">
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="price">Ürün Fiyatını Giriniz</label>
                                <input type="text" class="form-control" id="price" asp-for="Price">
                            </div>
                        </div>


                        <div class="card-body">
                            <div class="form-group">
                                <label for="image-url">Ürün Görselini Giriniz</label>
                                <input type="text" class="form-control" id="image-url" asp-for="ImageUrl">
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="category-id">Ürün Kategorisini Seçiniz</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Ürün Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" id="description" asp-for="Description">
                            </div>
                        </div>



                        <div class="card-action">
                            <button class="btn btn-primary">Ürünü Güncelle</button>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
