@model SignalRWebUI.Dtos.CategoryDtos.CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Kategori Adını Giriniz</label>
                                <input type="text" class="form-control" id="categoryname" asp-for="Name">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Kategoriyi Ekle</button>
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success" role="alert">
                                    @TempData["SuccessMessage"]
                                </div>
                            }

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @TempData["ErrorMessage"]
                                </div>
                            }
                        </div>
                    </div>
				</form>
			
			</div>
		
		</div>
	</div>
</div>
