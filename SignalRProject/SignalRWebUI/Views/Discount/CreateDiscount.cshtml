

@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirim Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">İndirim Başlığı Giriniz</label>
                                <input type="text" class="form-control" id="title" asp-for="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="amount">İndirim Oranını Giriniz</label>
                                <input type="text" class="form-control" id="amount" asp-for="Amount">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="image-url">Ürün Görselini Giriniz</label>
                                <input type="text" class="form-control" id="image-url" asp-for="ImageUrl">
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Ürün Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" id="Description" asp-for="Description">
                            </div>
                        </div>



                        <div class="card-action">
                            <button class="btn btn-primary">İndirimli Ürün Ekle</button>
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
